{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noEmitOnError": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "ES6",
    "lib": ["ES2015", "DOM"]
  },
  "exclude": ["node_modules", "dist", "lib", "lib-amd"],
  "ts-node": {
    "files": true
  }
}
